{
  "name": "klaytn-dev-sandbox-hardhat-contracts",
  "version": "1.0.0",
  "description": "A developer sandbox with sample DApp and smart contracts for the developer community of Klaytn blockchain",
  "repository": "https://github.com/klaytn/klaytn-dev-sandbox.git",
  "author": "Klaytn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/klaytn/klaytn-dev-sandbox/issues"
  },
  "homepage": "https://github.com/klaytn/klaytn-dev-sandbox",
  "scripts": {
    "hh": "hardhat",
    "compile": "hardhat compile",
    "run:local": "hardhat node",
    "deploy:hh": "hardhat deploy --network hardhat",
    "deploy:local": "hardhat deploy --network localhost",
    "deploy:hh:kip7": "hardhat deploy --contracts kip7 --network hardhat",
    "deploy:local:kip7": "hardhat deploy --contracts kip7 --network localhost",
    "deploy:hh:kip17": "hardhat deploy --contracts kip17 --network hardhat",
    "deploy:local:kip17": "hardhat deploy --contracts kip17 --network localhost",
    "deploy:hh:kip37": "hardhat deploy --contracts kip37 --network hardhat",
    "deploy:local:kip37": "hardhat deploy --contracts kip37 --network localhost"
  },
  "dependencies": {
    "@klaytn/contracts": "^1.0.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/ignition-core": "^0.15.1",
    "hardhat": "^2.22.3"
  }
